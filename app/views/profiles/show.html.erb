<div class="transparent-background">
	<div class="body-wrapper">
		
		<div class="row-fluid" style="padding-top:5%;">
			<div class="span6 pull-left">
				<div class="row-fluid">
					<div class="span6">
						<div class="profile-pic">
						<%= image_tag @user.picture.url(:medium) %>
						</div>
					</div>
					<div class="span6">
						<h1 class="uppercase inline" style="margin-left:0px;"><%=@user.fullName %></h1>
						<%= @user.short_bio%> 
						<br />
						<%= "From "+ @user.location if @user.location%>
						<br />
						<%= "Most Avaliable at: " + @user.prefered_schedule if @user.prefered_schedule%>
                        <div style="padding-top:1%;"><strong>Age: </strong>
							 <strong class="inline"><%= @user.age %></strong>
						</div>
						<div style="padding-top:1%;"><strong>VidactaPoints: </strong>
							 <span class="badge" data-id="<%=@user.id%>" rel="tooltip" title="VidactaPoints" style="cursor:default;"><%= @user.points%></span>
						</div>
					</div>
				</div>
				<div class="alert alert-success">
					<h4 class="alert-heading">Description:</h4>
						<%= @description %>
				</div>
			</div>
			<div class="span6">
				<div class="pull-right">
					<%if params[:id] == nil%>
						<div><h2 id="edit-profile-btn"><a class="btn" href = "<%= edit_profiles_path%>">Edit Profile</a></h2></div>
					<%end%>
					<ul class="nav nav-list">
						<div class="row-fluid">
							<div class="span6" style="width: 60px;"><strong>Rating: </strong></div>
							<div class="span6"><ul class='star-rating'>
								<!--the width determines how many stars are already highlighted-->
								<li class='current-rating' id='current-rating' style="width: <%= @rank*25 %>px;"></li>
							</ul>
							</div>
						</div>
						<li class="divider"></li>
						<div><strong>Number of Completed Sessions:</strong> <%= @sessions %></div>
						<div><strong>Number of Missed Sessions:</strong> <%= @missed %></div>
						<li class="divider"></li>
					</ul>
				</div>
			</div>
		</div>
		Conversations Started <br />
		<%@askQuestions.each do |question|%>
			<%= question.question%>
			<%if question.ask_rank%>
				<li class='current-rating' style="width: <%= question.ask_rank*25 %>px;"></li>
			<%end%>
			<br />
		<%end%>
		Conversations In <br />
		<%@answerQuestions.each do |question|%>
			<%= question.question%>
			<%if question.rank%>
				<li class='current-rating' style="width: <%= question.rank*25 %>px;"></li>
			<%end%>
			<br />
		<%end%>
	</div>
</div>