<header>
	<div id="feedback">
		<div class="body-wrapper">
			<div class="row-fluid">
				<div class="span12">
					<a data-toggle="modal" data-target="#feedback-modal" href = "#feedback-modal">
						<img src="/images/feedback.png" />
					</a>
					<div class="modal hide fade" id="feedback-modal">
						<div class="modal-header">
							<button class="close" data-dismiss="modal">&times;</button>
							<h3>Feedback</h3>
						</div>
						<div class="modal-body">
							<form class="well form-horizontal" action="" method="">
								<fieldset>
									<div class="control-group">
										<label class="control-label">First Name: </label>
										<div class="controls">
											<input type="text" value= "<%=params["fname"]%>" name="fname" />
										</div>
									</div>
									<div class="control-group">
										<label class="control-label">Last Name: </label>
										<div class="controls">
											<input type="text" value= "<%=params["lname"]%>" name="lname" />
										</div>
									</div>
									<div class="control-group">
										<label class="control-label">Email: </label>
										<div class="controls">
											<input type="text" value= "<%=params["fname"]%>" name="fname" />
										</div>
									</div>
									<div class="control-group">
										<label class="control-label" for="textarea">Comments: </label>
										<div class="controls">
									          <textarea class="input-xlarge" id="textarea" rows="5"></textarea>
						            	</div>
									</div>
									<div class="control-group">
										<div class="controls">
											<input class="btn btn-inverse" type="submit" value="Send Feedback" />	
										</div>
									</div>
								</fieldset>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div id="fb-root"></div>
	<script>(function(d, s, id) {
		var js, fjs = d.getElementsByTagName(s)[0];
		if (d.getElementById(id)) return;
		js = d.createElement(s); js.id = id;
		js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=258011107615370";
		fjs.parentNode.insertBefore(js, fjs);
		}(document, 'script', 'facebook-jssdk'));</script>
		
	<div class="fb-like" data-href="http://vidactica.heroku.com/" data-send="true" data-width="450" data-show-faces="false"></div>
	<div class="body-wrapper">
	<div class="row-fluid">
  		<div class="span4"><a href="/"><h1> Vidactica</h1></a></div>
  		<div class="span8">
		<ul class="nav pull-right">
			<li class="inline"><a href="/"><%= image_tag("home_icon.png", :alt => "Home", :height => "15px", :width => "14px") %><b class="home-nav">Home</b></a></li>
			<%if cookies[:name]  %>
			<li class="inline"><a href="/myquestions"><%= image_tag("conversation_icon_white.png", :alt => "My Conversations", :height => "15px", :width => "14px") %><b class="home-nav">My Conversations</b></a></li>
			<li class="dropdown inline">
				    <a class="dropdown-toggle profile_icon" data-toggle="dropdown" data-target="#" href="/bio"><%= image_tag("profile_icon.png", :alt => "Profile", :height => "13px", :width => "15px") %> <b class="uppercase"><%= cookies[:name] %></b>
				    <b class="caret"></b></a>
				    <ul class="dropdown-menu">
					  <li><a href="/bio">Profile</a></li>
				      <li class="divider"></li>
				      <li><a href= "/fb_registration/Logout">Logout</a></li>
			    	</ul>
			</li>
			
			<%else%>
					<li class="inline">
							<a data-toggle="modal" data-target="#login-modal" href = "#login-modal"><%= image_tag("profile_icon.png", :alt => "LOGIN", :height => "18px", :width => "18px") %><b>Login</b></a>
					</li>
			<%end%>
    	</ul>
  		</div>
	</div>
	</div>
</header>

