<script src="//connect.facebook.net/en_US/all.js"></script>

<%if params["fail"]%> <!-- If this alert needs to be presented to clarify to the user -->
<script type ="text/javascript">
	alert('Invalid email/password combination');
	</script>
<%end%>

<%if params["verify"]%> <!-- If this alert needs to be presented to clarify to the user -->
<script type ="text/javascript">
	alert('Please verify your email');
	</script>
<%end%>

<div class="transparent-background">
	<div class="body-wrapper">
		<div style="margin-left:auto;margin-right:auto;">
			<center>
				<h1 style="margin-bottom:2%;">Login</h1>
				<form method="POST" action="/fb_registration/Remember">
  					<span id="email-login">E-mail: <input type="text" name="user" size="15" /><br /></span>
  					Password: <input type="password" name="pass" size="15" /><br />
  					
    					<p><input class="btn btn-inverse" type="submit" value="Login" /></p>
				</form>
			</center>
		</div>
	</div>
</div>
<div class="row-fluid">
	<div class="span12"><%= render 'layouts/footer' %></div>		   	  		
</div>

