<div class="transparent-background">
	<div class="body-wrapper">
		<h1 class="uppercase"><%= cookies[:name] %></h1>
		<div class="row-fluid" style="margin-top:1%;">
			<div class="span6">
				<div class="pull-left">
					<div class="profile-pic">
						<%= image_tag url_for(:action => 'show_image', :id => @user.id, :size => "300x200")  %>
					</div>
					<div class="alert alert-success">
						<h4 class="alert-heading">Description:</h4>
						<%= @profile.blurb %>
					</div>
				</div>
			</div>
			<div class="span6">
				<div class="pull-right">
					<%if params[:id] == nil%>
					<div><h2><a class="btn btn-success" href = "/pages/editBio">Edit Profile</a></h2></div>
					<%end%>
					<div><strong>Rank:</strong> <%= @user.rank %> / 5</div>
					<div><strong>Number of Sessions:</strong> <%= @user.sessions %></div>
				</div>
			</div>
		</div>
	</div>
</div>