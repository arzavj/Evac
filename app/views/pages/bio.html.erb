<div class="transparent-background">
	<div class="body-wrapper">
		
		<div class="row-fluid" style="padding-top:5%;">
			<div class="span6 pull-left">
				<div class="row-fluid">
					<div class="span6">
						<div class="profile-pic">
						<%= image_tag url_for(:action => 'show_image', :id => @user.id)  %>
						</div>
					</div>
					<div class="span6">
						<h1 class="uppercase inline" style="margin-left:0px;"><%= @user.firstName %> <%= @user.lastName %></h1>
                        <div style="padding-top:1%;"><strong>Age: </strong>
							 <strong class="inline"><%= @user.age %></strong>
						</div>
					</div>
				</div>
				<div class="alert alert-success">
					<h4 class="alert-heading">Description:</h4>
						<%= @profile.blurb %>
				</div>
			</div>
			<div class="span6">
				<div class="pull-right">
					<%if params[:id] == nil%>
						<div><h2 id="edit-profile-btn"><a class="btn" href = "/pages/editBio">Edit Profile</a></h2></div>
					<%end%>
					<ul class="nav nav-list">
						<!--<div><strong>Rating:</strong> <%= "%0.2f" % @rank %> / 5</div>-->
						<div>
							<strong>Rating: </strong>
							<ul class='star-rating inline'>
								<!--the width determines how many stars are already highlighted-->
								<li class='current-rating' id='current-rating' style="width: <%= @rank*25 %>px;"></li>
								<li><a href="#" title='Horrible' class='one-star'>1</a></li>
								<li><a href="#" title='OK' class='two-stars'>2</a></li>
								<li><a href="#" title='Good' class='three-stars'>3</a></li>
								<li><a href="#" title='Very Good' class='four-stars'>4</a></li>
								<li><a href="#" title='Excellent' class='five-stars'>5</a></li>
							</ul>
						</div>
						<li class="divider"></li>
						<div><strong>Number of Sessions:</strong> <%= @sessions %></div>
						<li class="divider"></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>