<div class="transparent-background">
	<div class="body-wrapper">
		<center><h1>Questions Asked:</h1></center>
		<ul class="nav nav-list" style="padding-left:0px;padding-right:0px;">
			<% if @qAsked.empty? %>
				<li class="divider"></li>
			<%end%>
<% @qAsked.each do |q| %>
	
	<% if q.schedule_id != -1 %>
		<% date = Schedule.find(q.schedule_id).appointment %>
		<% if date.past? %>
			<b>YOU ARE SCHEDULED TO ANSWER THIS QUESTION </b><br>
		<% end %>
	<% end %>
			
	<li><%=q.question%></li>
	<% if q.schedules.any?%>
		<form action="/tok/AcceptSchedule" method= "get">
		<input type = "hidden" name = "qID" value = "<%= q.id %>" />
		<% q.schedules.each do |appointment|%>
			<%if appointment.id == q.schedule_id%>
				<% str = "checked=\"checked\""%>
			<%else%>
				<%str = ""%>
			<%end%>
			<input type="radio" name="appointment" value="<%=appointment.id%>" <%=str%>/> <%= appointment.appointment%> 			<br>
		<%end%>
		<input class="btn" type="submit" value="Schedlue" />
		</form>
	<%end%>
		<form action="/tok/ResetQuestion" method= "get">
		<input type = "hidden" name = "qID" value = "<%= q.id %>" />
		<input class="btn" type="submit" value="Re-enter Room" />
		</form>
	<li class="divider"></li>
<%end%>
	</ul>
	
	
	<div class="wd-expando">
		<h2 class="SmallFont">Questions Scheduled To Answer:<b class="caret caret-myquestions"></b></h2>
	<ul class="nav nav-list">
<% @qAnswer.each do |q| %>
	<li><%=q.question%><br /><form action="/tok/ScheduleAppointment" method= "get"><input type = "hidden" name = "qID" value = "<%= q.id %>" /><input class="btn" type="submit" value="Schedule" /></form></li>
	<li class="divider"></li>
<%end%>
	</ul>
	</div>
	
	<div class="wd-expando">
		<h2 class="SmallFont">Previously Asked Questions:<b class="caret caret-myquestions"></b></h2>
		<ul class="nav nav-list">
			<% @qPrev.each do |q| %>
			<li><%=q.question%><br />
				<div class="wd-expando notes-collapse">
					<h2>Notes</h2>
					<ul>
						<li><%=q.notes%></li>
					</ul>
				</div>
			</li>
			<li class="divider"></li>
			<%end%>
		</ul>
	</div>
	
		<div class="wd-expando">
		<h2 class="SmallFont">Previously Answered Questions:<b class="caret caret-myquestions"></b></h2>
		<ul class="nav nav-list">
			<% @qPrevAnswer.each do |q| %>
			<li><%=q.question%><br />
				<div class="wd-expando notes-collapse">
					<h2>Notes</h2>
					<ul>
						<li><%=q.notes%></li>
					</ul>
				</div>
			</li>
			<li class="divider"></li>
			<%end%>
		</ul>
	</div>
	
	</div>
	
	
</div>
