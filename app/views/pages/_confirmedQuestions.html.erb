<div class="span6">
	<ul class="nav nav-list">
		<li><h3 class="SmallFont">Confirmed Conversations</h3></li>
		<li class="divider"></li>
		<%@qConfirmed.each do |q|%>
			<li>
				<span class="questions"><%=q.question%></span>
				<%if @user.id == q.user_id%>
					<%id = q.answer_id%>
				<%else%>
					<%id = q.user_id%>
				<%end%>
				<%user = User.find(id)%>
				<%name = user.firstName + " " + user.lastName%>
				with <a class="question-username" href="/bio?id=<%=id%>"><%=name%></a><br />
							
				<%s = Schedule.find(q.schedule_id)%>
				<br />You are scheduled to meet at <span name="timeDiv" ><%=s.appointment.strftime("%B %d, %Y %H:%M:%S UTC")%> </span>
				<%schedule = s.appointment - (5.minutes)%> <!--5 minutes before hand-->
				
				<%future = nil%>
				<%if q.first_entry.nil?%>
					<%future = s.appointment%>
				<%else%>
					<%if q.first_entry > s.appointment%>
						<%future = q.first_entry%>
					<%else%>
						<%future = s.appointment%>
					<%end%>
				<%end%>
				<%future = future + (10.minutes)%>
				<%if future.past? && !q.in_session%>
					<%markMissed q%>
				<%#update UI apprporatilu%>
					<div class="margin-bottom-5">
						<input class="btn disabled enter-chatroom-tooltip" rel="tooltip" title="Please propose a new time" type="submit" value="Enter Room For Appointment" />
					</div>
				<%elsif schedule.past?%>
					<form class="margin-bottom-5" action="/tok/EnterSession" method= "get">
						<input type = "hidden" name = "qID" value = "<%= q.id %>" />
						<input type = "hidden" name = "uID" value = "<%= @user.id %>" />
						<input class="btn" type="submit" value="Enter Room For Appointment" />
					</form>			
				<%else%>
					<div class="margin-bottom-5">
						<input class="btn disabled enter-chatroom-tooltip" rel="tooltip" title="Please return 5 minutes prior to scheduled time" type="submit" value="Enter Room For Appointment" />
					</div>
				<%end%>	
								
				<button class="btn" data-toggle="modal" data-target="#schedule-modal" href = "#schedule-modal" onClick="addQID(<%=q.id%>)">
					Propose Alternate Schedule
				</button>
			</li>
			<li class="divider"></li>
		<%end%>
						
	</ul>
</div>