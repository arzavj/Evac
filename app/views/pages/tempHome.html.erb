<button class="btn" data-toggle="collapse" data-target="#ques-sched">
	<h4 class="SmallFont">Questions Scheduled To Answer:</h3>
</button>
<div id="ques-sched" class="collapse in">
<ul class="nav nav-list" style="padding-left:0px;padding-right:0px;">
	<% if @qAnswer.empty? %>
		<li class="divider"></li>
	<%end%>
<% @qAnswer.each do |q| %>
<li><%=q.question%></li><form action="/tok/ScheduleAppointment" method= "get"><input type = "hidden" name = "qID" value = "<%= q.id %>" /><input class="btn" type="submit" value="Schedule" /></form>
<li class="divider"></li>
<%end%>
</ul>
</div>

<button class="btn" data-toggle="collapse" data-target="#prev-ques">
	<h4 class="SmallFont">Previously Asked Questions:</h4>
</button>
<div id="prev-ques" class="collapse in">
	<ul class="nav nav-list" style="padding-left:0px;padding-right:0px;">
		<% @qPrev.each do |q| %>
		<li><%=q.question%></li>
		<button class="btn" data-toggle="collapse" data-target="#notes">Notes</button>
		<div id="notes" class="collapse in"><%=q.notes%></div>
		<li class="divider"></li>
		<%end%>
	</ul>
</div>

------------------------------------------------------------------------------------------------------------------

<div class="answer-questions">
	<div class="drop-down">
		<h4>Choose a topic in Entrepreneurship:</h4>
		<form name="input" action="/pages/getCategory?method=post" method="post">
			<select name="category">
				<%(0..@categories.length-1).each do |i|%>
					<%if i == @cat-1%>
						<%str = "selected=\"selected\""%>
					<%end%>
					<option value="<%=(i+1).to_s%>" <%=str%>> <%=@categories[i]%> </option>
				<%end%>
			</select>
			<input class="btn btn-inverse" type="submit" value="Search" />
		</form>

		<div class="questions">
			<h4><u><b>Recent Questions:</u></b></h4>
			<ul class="nav nav-list" style="padding-left:0px;padding-right:0px;">
			<%if @questions.any? || @cat == 0%>
				<%counter = 0%>
				<%@questions.each do |q|%>
					<%if counter > 5%>
						<%break%>
					<%end%>
					<%if (q.schedules.empty? || q.in_session) && !q.was_answered%>
						<% u = q.user %>
						<% name = u.name %>
						<li style="margin-top:1%;"><b>User:</b> <a id="username" href = "/bio?id=<%=u.id%>" ><%= name %></a><br />
						<% if q.in_session %>
							<% str = "Answer" %>
						<% else %>
							<% str = "Schedule Appointment" %>
						<% end %>
					
						<%= q.question%> <form action="/tok/GiveChatRoom" method= "get"><input type = "hidden" name = "qID" value = "<%= q.id %>" /><input type = "hidden" name = "askID" value = "<%= u.id %>" /><input type = "hidden" name = "answer" value = <%= q.in_session %> /><input class="btn" type="submit" value=<%=str%> /></form>
						</li>
						<li class="divider"></li>
						<%counter = counter + 1%>
					<%end%>
				<%end%>	
			<%end%>
			</ul>
		</div>
	</div>
</div>